{
  "name": "creator-assistant",
  "version": "1.0.0",
  "description": "基于 OpenClaw 框架的个人自媒体创作助手",
  "private": true,
  "type": "module",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "lint:json": "node scripts/ci/validate-json.mjs",
    "lint:structure": "node scripts/ci/check-structure.mjs",
    "ci": "npm run typecheck && npm run lint:json && npm run lint:structure",
    "dev:web": "npm run dev --prefix web",
    "build:web": "npm run build --prefix web",
    "start:web": "npm run start --prefix web",
    "db:push": "npx prisma db push --schema web/prisma/schema.prisma",
    "db:studio": "npx prisma studio --schema web/prisma/schema.prisma",
    "docker:up": "docker compose up -d --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:build": "docker compose build",
    "pack:extension": "node scripts/pack-extension.mjs"
  },
  "devDependencies": {
    "typescript": "^5.7",
    "@types/node": "^22"
  },
  "engines": {
    "node": ">=22.12.0"
  }
}
